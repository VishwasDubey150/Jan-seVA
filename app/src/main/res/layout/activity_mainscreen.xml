<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mainscreen">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="339dp"
        android:layout_height="242dp"
        android:text="This application is mainly used to resister any complain related to any gornment  department/employee or worker who is not doing his work properly."
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="292dp"
        android:layout_height="353dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.873"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="188dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="complaint"
            android:text="Resister Complaint"
            android:textColor="#F83D02"
            android:textSize="16sp"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="107dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:onClick="news"
            android:text="News (by DNA)"
            android:textAllCaps="false"
            android:textColor="#F83D02"
            android:textSize="16sp"
            app:backgroundTint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>